.block
	position fixed
	top 0
	right 0
	bottom 0
	left 0
	display flex
	flex-direction row
	justify-content center
	align-items center
	.back
		background rgba(0, 0, 0, .57)
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		z-index -1
	.window
		min-width 320px
		padding 24px
		background #fff
		border-radius 3px
		box-shadow 0 24px 24px 0 rgba(0, 0, 0, 0.24), 0 0 24px 0 rgba(0, 0, 0, 0.12)
		z-index 1
		.header
			padding-bottom 15px
			margin-bottom 24px
			border-bottom 1px solid rgba(0, 0, 0, 0.12)
			display flex
			flex-direction row
			justify-content flex-start
			align-items center
			.title
				flex 1
				font-size: 19px
				line-height 28px
			.close
				width 18px
				height 18px
				background: #ccc
				cursor: pointer
				background: url('../../assets/close@2x.png') no-repeat center
				background-size 14px
				&:hover
					background-image: url('../../assets/close-hover@2x.png')
				&:active
					background-image: url('../../assets/close-active@2x.png')


