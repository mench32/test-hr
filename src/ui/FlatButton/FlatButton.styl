@import '../../variables.styl';
.block
	text-transform uppercase
	font-size: 14px
	border none
	color rgba(0, 0, 0, 0.37)
	padding 10px 8px
	line-height: 16px
	border-radius: 2px
	outline none
	cursor pointer
	background-color: transparent
	user-select none
	&:hover
		color rgba(0, 0, 0, 0.47)
	&:active
		color rgba(0, 0, 0, 0.87)

	&.accent
		color: $accentColor;
		&:hover
			color $accentColorHover
		&:active
			color $accentColorPress
