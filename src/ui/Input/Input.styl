@import '../../variables.styl'
.block
	box-sizing: border-box
	display: inline-block
	&.wide
		display: block
	.input
		font-size: 16px
		width 100%
		line-height: 24px
		padding 8px 16px
		background: $white
		color $primaryText
		outline none
		border none
		// border 1px solid rgba(0, 0, 0, 0.12)
		box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.12)
		border-radius 2px
		box-sizing: border-box
		&::placeholder
			color $hintText
		&:focus
		&:hover
			box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.37)
			// border-color rgba(0, 0, 0, 0.37)
		&.error
			box-shadow: 0 0 0 1px $errorText
	.info
		margin-top 4px
		font-size: 12px
		line-height: 16px
		color $errorText
